def extract_messages_by_number():  
    target_number = input("ğŸ˜ˆ Enter the contact number to search (e.g., +1234567890): ")  
    file_path = input("ğŸ˜ˆ Enter the text file path (e.g., messages.txt): ")  

    if not os.path.exists(file_path):  
        print(f"ğŸ˜ˆ File '{file_path}' not found! ğŸ˜ˆ")  
        return  

    print(f"ğŸ˜ˆ Searching for messages containing '{target_number}'... ğŸ˜ˆ")  
    with open(file_path, 'r') as file:  
        for line in file:  
            if target_number in line:  
                print(f"ğŸ˜ˆ {line.strip()} ğŸ˜ˆ")  

# Run the script  
extract_messages_by_number()  
